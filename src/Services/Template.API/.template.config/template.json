{
  "$schema": "http://json.schemastore.org/template",
  "classifications": [
    "C#"
  ],
  "identity": "Template.API",
  "name": "IPlace Hexagonal Web API Template",
  "shortName": "iplace-hexagonal-web-api-template",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "symbols": {
    "serviceName": {
      "type": "parameter",
      "datatype": "text",
      "description": "Service name with a prefix and suffix. CammelCase",
      "replaces": "Template",
      "fileRename": "Template",
      "isRequired": true
    }
  },
  "SpecialCustomOperations": {
    "**/*.yml": {
      "operations": [
        {
          "type": "conditional",
          "configuration": {
            "if": [
              "---#if"
            ],
            "else": [
              "---#else"
            ],
            "elseif": [
              "---#elseif"
            ],
            "endif": [
              "---#endif"
            ],
            "trim": "false",
            "wholeLine": "true"
          }
        }
      ]
    }
  },
  "author": "TomeQ2k"
}